<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3BAAFF"
            android:text="MAKANAN KHAS ISLAM ARAB"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="12pt" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="172dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/mutabaq" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="MUTABAQ"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Makanan khas Arab Saudi satu ini dikenal dengan nama martabak di Indonesia. Martabak di Indonesia sudah sangat terkenal dan cukup mudah ditemukan. Mutabbaq berarti terlipat adalah makanan yang lebih dikenal dengan nama Martabak."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Muttabaq di Indonesia terdiri dari banyak varian rasa mulai dari asin hingga muttabaq manis yang dihiasi dengan variasi toping."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="8pt" />

        <Button
            android:id="@+id/btkembali"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Kembali"
            app:backgroundTint="#0BC5F3" />

    </LinearLayout>
</ScrollView>